generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(cuid())
  email    String    @unique
  clerkId  String    @unique
  records  Record[]
  payments Payment[]
}

model Record {
  id         String   @id @default(cuid())
  userId     String
  text       String
  duration   Int
  words      Int
  uploadLink String
  createdAt  DateTime @default(now())
  User       User     @relation(fields: [userId], references: [id])
}

model Payment {
  id        String   @id @default(cuid())
  userId    String
  amount    Float
  status    String
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])
}
